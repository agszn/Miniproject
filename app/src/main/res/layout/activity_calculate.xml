<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/algn"
    android:padding="10dp"
    tools:context=".calculate">

    <TextView
        android:text="Formulas"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/formulas" />

    <LinearLayout
        android:id="@+id/lineA"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_above="@+id/unit"
        android:orientation="horizontal" />

    <TextView
        android:text="Unit-Test = Subject1 + Subject2 + Subject3 + Subject4 + Subject5 + Subject6 "
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/unit"
        android:layout_below="@+id/formulas"
        />

    <TextView
        android:text="Semester = unittest1+unittest2+semester1*90/100"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_below="@+id/unit"
        />
    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Calculate Results"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textView"
        android:backgroundTint="@color/cardview_dark_background"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Exit"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:layout_below="@id/calculate"/>



</RelativeLayout>